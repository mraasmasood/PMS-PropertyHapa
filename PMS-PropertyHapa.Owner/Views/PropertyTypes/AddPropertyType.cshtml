@model PMS_PropertyHapa.Models.DTO.PropertyTypeDto

@{
    ViewData["Title"] = "Add/Edit PropertyType";
    Layout = "~/Views/Shared/ManagePropertyforOwnerLayout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-sm-6">
                    <h3>@(Model?.PropertyTypeId == 0 ? "Add Property Type" : "Edit Property Type")</h3>
                </div>
                <div class="col-12 col-sm-6">
                    <ol class="breadcrumb">
                        @if (Model?.PropertyTypeId == 0)
                        {
                            <li class="breadcrumb-item"><a href="@Url.Action("Create", "PropertyTypes")"><i data-feather="home"></i></a></li>
                        }
                        else
                        {
                            <li class="breadcrumb-item"><a href="@Url.Action("Update", "PropertyTypes")"><i data-feather="home"></i></a></li>
                        }
                        <li class="breadcrumb-item">PropertyType</li>
                        <li class="breadcrumb-item active">@(Model?.PropertyTypeId == 0 ? "Add PropertyType" : "Edit PropertyType")</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="edit-profile">
            <div class="row">

                <form id="propertyTypeForm" enctype="multipart/form-data">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header pb-0">
                                <h4 class="card-title mb-0">Property Type Information</h4>
                                <div class="card-options"><a class="card-options-collapse" href="#" data-bs-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a><a class="card-options-remove" href="#" data-bs-toggle="card-remove"><i class="fe fe-x"></i></a></div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @if (Model != null)
                                    {
                                        <input type="hidden" id="PropertyTypeId" name="PropertyTypeId" value="@Model.PropertyTypeId" />
                                        <!-- Property Type Name -->
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label for="PropertyTypeName" class="form-label">Property Type Name</label>
                                                <select class="form-control" id="PropertyTypeName" name="PropertyTypeName" required>
                                                    <option value="" selected disabled>Select Property Type</option>
                                                    <option value="A">A</option>
                                                    <option value="B">B</option>
                                                    <option value="C">C</option>
                                                    <option value="D">D</option>
                                                    <option value="E">E</option>
                                                </select>
                                            </div>

                                        </div>

                                        <!-- Icon SVG -->
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label for="Icon_SVG2" class="form-label">Icon SVG</label>
                                                <input type="file" class="form-control" id="Icon_SVG2" name="Icon_SVG2" />
                                            </div>
                                        </div>
                                        <!-- Status -->
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label for="Status" class="form-label">Status</label>
                                                <select class="form-control" id="Status" name="Status" required>
                                                    <option value="" selected disabled>Select Status</option>
                                                    <option value="true">Active</option>
                                                    <option value="false">Inactive</option>
                                                </select>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>

                        <div class="card-footer text-end">
                            <button type="button" id="submitBtn" onclick="submitPropertyTypeForm()" class="btn btn-primary">@((Model?.PropertyTypeId == null || Model?.PropertyTypeId == 0) ? "Add" : "Edit") Property Type</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    function submitPropertyTypeForm() {
        var propertyTypeFormData = new FormData();
        propertyTypeFormData.append("PropertyTypeId", $('#PropertyTypeId').val());
        propertyTypeFormData.append("PropertyTypeName", $('#PropertyTypeName').val());
        propertyTypeFormData.append("Icon_SVG2", $('#Icon_SVG2')[0].files[0]);
        propertyTypeFormData.append("Status", $('#Status').val());

        var userId = localStorage.getItem('userId');
        var userName = localStorage.getItem('userName');

        if (@(Model != null && Model.PropertyTypeId == 0 ? "true" : "false")) {
            propertyTypeFormData.append("AddedBy", userName);
            var addedDate = new Date().toISOString().slice(0, 10);
            propertyTypeFormData.append("AddedDate", addedDate);
            propertyTypeFormData.append("TenantId", userId);
            propertyTypeFormData.append("Icon_SVG", fetchiconsvg);
        } else {
            propertyTypeFormData.append("ModifiedBy", userName);
            var modifiedDate = new Date().toISOString().slice(0, 10);
            propertyTypeFormData.append("ModifiedDate", modifiedDate);
            propertyTypeFormData.append("TenantId", userId);
            propertyTypeFormData.append("Icon_SVG", fetchiconsvg);
        }
        
        var ajaxUrl = '';
        var method = '';

        if (@(Model?.PropertyTypeId == null || Model?.PropertyTypeId == 0 ? "true" : "false")) {
            ajaxUrl = '/PropertyTypes/Create';
            method = 'POST';
        } else {
            ajaxUrl = '/PropertyTypes/Update';
            method = 'POST';
        }

        $.ajax({
            url: ajaxUrl,
            type: method,
            processData: false,
            contentType: false,
            data: propertyTypeFormData,
            success: function (response) {
                if (response.success) {
                    window.location.href = '/PropertyTypes/Index';
                    var Toast = Swal.mixin({ toast: true, position: 'top-end', showConfirmButton: false, progressBar: true, timer: 3000 });
                    Toast.fire({ icon: 'success', title: 'Updated Successfully' });
                } else {
                    var Toast = Swal.mixin({ toast: true, position: 'top-end', showConfirmButton: false, progressBar: true, timer: 3000 });
                    Toast.fire({ icon: 'error', title: 'An error occurred' });
                }
            },
            error: function (xhr, status, error) {
                var Toast = Swal.mixin({ toast: true, position: 'top-end', showConfirmButton: false, progressBar: true, timer: 3000 });
                Toast.fire({ icon: 'error', title: 'An error occurred' });
            }
        });
    }
    var fetchiconsvg;
    $(document).ready(function () {
        // Set default status dropdown
        $("#Status").val(""); // Select the disabled option by default

        // Display Icon_SVG2 if available, else display Icon_SVG
        var iconSVG = "@Model?.Icon_SVG";
        var iconSVG2 = "@Model?.Icon_SVG2";
        fetchiconsvg = "@Model?.Icon_SVG";
        if (iconSVG2 !== "") {
            // If Icon_SVG2 has an image, display it
            $("#iconImageContainer").html('<img src="data:image;base64,' + iconSVG2 + '" height="130px" width="150px" />');
        } else {
            $("#iconImageContainer").html('<img src="data:image;base64,' + iconSVG + '" height="130px" width="150px" />');
        }

        // Set selected status and property type name if available
        var status = "@Model?.Status";
        if (status !== "") {
            $("#Status").val(status.toLowerCase()); // Convert to lowercase to match "true" or "false"
        }

        var propertyTypeName = "@Model?.PropertyTypeName";
        if (propertyTypeName !== "") {
            $("#PropertyTypeName").val(propertyTypeName);
        }
    });

</script>

